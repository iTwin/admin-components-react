{
  "name": "@itwin/imodel-browser",
  "description": "Components that let the user browse the iModels of a context and select one.",
  "repository": "https://github.com/iTwin/admin-components-react/tree/main/package/imodel-browser",
  "private": "false",
  "version": "0.0.1-alpha",
  "main": "lib/index.js",
  "module": "build/index.js",
  "types": "lib/index.d.ts",
  "author": "Bentley Systems, Inc.",
  "license": "MIT",
  "scripts": {
    "start": "rollup -cw",
    "build": "rollup --silent -c",
    "test": "jest --silent",
    "securityscan": "tslint --config tslint-securityscan.json --force -o securityscan.log -p tsconfig.json \"src/*.ts*\"",
    "clean": "rimraf lib build",
    "precommit": "lint-staged --verbose"
  },
  "storybookSource": "src/index.ts",
  "files": [
    "lib/**/*",
    "build/**/*"
  ],
  "dependencies": {
    "classnames": "^2.2.6",
    "@bentley/itwinui-react": "^0.5.1"
  },
  "devDependencies": {
    "@bentley/appsec-tslint-rules": "^1.2.20",
    "@rollup/plugin-commonjs": "~17.1.0",
    "@testing-library/react-hooks": "^5.1.0",
    "@testing-library/react": "^11.1.0",
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.0",
    "@types/react-dom": "16.9.5",
    "@types/react": "16.9.23",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "concurrently": "^4.1.0",
    "copyfiles": "^2.1.0",
    "eslint-config-airbnb": "^0.0.4",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react-hooks": "^4.0.7",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint": "^7.4.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-mock-console": "^1.0.0",
    "jest": "^26.0.0",
    "msw": "^0.27.1",
    "node-sass": "^5.0.0",
    "nodemon": "^1.19.1",
    "postcss": "^8.2.8",
    "prettier": "^2.0.5",
    "react-dom": "^16.13.0",
    "react-test-renderer": "^16.13.0",
    "react": "^16.13.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup": "^2.42.4",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.18.0",
    "stylelint": "^13.6.1",
    "ts-jest": "^26.0.0",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "peerDependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "publishConfig": {
    "registry": "https://pkgs.dev.azure.com/bentleycs/_packaging/Packages/npm/registry/",
    "access": "public"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\](?!@bentley/ui).+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|svg?.+)$": "<rootDir>/src/tests/mocks/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "verbose": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "test",
      ".d.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**"
    ],
    "setupFilesAfterEnv": [
      "./scripts/setupJest.js"
    ]
  },
  "resolutions": {
    "minimist": "^1.2.5"
  },
  "eslintConfig": {
    "extends": [
      "../../../common/scripts/.eslintrc.ts.autofix.json",
      "../../../common/scripts/.eslintrc.ts.json"
    ],
    "rules": {
      "prettier/prettier": [
        "off",
        {
          "endOfLine": "lf"
        }
      ]
    }
  }
}
